<?xml version="1.0"?>
<record-definition prefix="mods" version="3.4.0">
    <namespaces>
        <namespace prefix="mods" uri="http://www.lido-schema.org" schema=""/>
    </namespaces>

    <attrs>
        <attr tag="ID"/>
        <attr tag="xlink"/>

        <attr tag="lang"/>
        <attr tag="xml:lang"/>
        <attr tag="script"/>
        <attr tag="transliteration"/>
        <attr tag="type"/> <!--(enumerated: abbreviated, translated, alternative, uniform) -->
        <attr tag="authority"/>
        <attr tag="authorityURI"/>
        <attr tag="valueURI"/>
        <attr tag="displayLabel"/>
        <attr tag="supplied"/>   <!--yes-->
        <attr tag="usage"/> <!--primary-->
        <attr tag="altRepGroup"/>
        <attr tag="nameTitleGroup"/>
        <attr tag="collection"/>  <!--yes-->
        <attr tag="manuscript"/>  <!--yes-->
        <attr tag="shareable"/>

    </attrs>

    <elems>
        <!--top-level elements-->
        <elem tag="abstract"/>
        <elem tag="accessCondition"/>
        <elem tag="classification"/>
        <elem tag="extension"/>
        <elem tag="genre"/>
        <elem tag="identifier"/>
        <elem tag="language"/>
        <elem tag="location"/>
        <elem tag="name"/>
        <elem tag="note"/>
        <elem tag="originInfo"/>
        <elem tag="part"/>
        <elem tag="physicalDescription"/>
        <elem tag="recordInfo"/>
        <elem tag="relatedItem"/>
        <elem tag="subject"/>
        <elem tag="tableOfContents"/>
        <elem tag="targetAudience"/>
        <elem tag="titleInfo"/>
        <elem tag="typeOfResource"/>
        <!--other elements-->

        <elem tag="title" />
        <elem tag="subTitle"/>
        <elem tag="partNumber"/>
        <elem tag="partName"/>
        <elem tag="nonSort"/>
        <elem tag="namePart"/>
        <elem tag="displayForm"/>
        <elem tag="affiliation"/>
        <elem tag="role"/>
        <elem tag="roleTerm"/>
        <elem tag="description"/>
    </elems>

    <root tag="mods" attrs="" required="true">
        <!--todo: what todo with modsCollection-->

        <!--1. titleInfo-->
        <elem tag="titleInfo" attrs="ID, xlink, lang, xml:lang, script, transliteration, type, authority, displayLabel, supplied, usage, altRepGroup, nameTitleGroup
">
            <elem tag="title" attrs="lang, xml:lang, script, transliteration" required="true"/>
            <elem tag="subTitle" attrs="lang, xml:lang, script, transliteration"/>
            <elem tag="partNumber" attrs="lang, xml:lang, script, transliteration"/>
            <elem tag="partName" attrs="lang, xml:lang, script, transliteration"/>
            <elem tag="nonSort" attrs="lang, xml:lang, script, transliteration"/>
        </elem>

        <!--2. name-->
        <elem tag="name" attrs="">
            <elem tag="namePart"/>
            <elem tag="displayForm"/>
            <elem tag="affiliation"/>
            <elem tag="role">
                <!--(see:http://www.loc.gov/standards/sourcelist/relator-role.html)-->
                <elem tag="roleTerm"/>
            </elem>
            <elem tag="description"/>
        </elem>

        <!-- 3. typeOfResource -->
        <elem tag="typeOfResource" attrs="collection, manuscript, displayLabel, usage, altRepGroup"/> <!--has opt list -->

        <!-- 4. genre -->
        <!--authority (see: http://www.loc.gov/standards/sourcelist/genre-form.html);-->
        <elem tag="genre" attrs="lang, xml:lang, script, transliteration, authority, authorityURI, valueURI, type, displayLabel, usage, altRepGroup"/>

        <!-- 5. originInfo -->
        <elem tag="originInfo" attrs="lang, xml:lang, script, transliteration">

        </elem>


        <!--6. language-->

        <!--7. physicalDescription-->

        <!--8. abstract-->

        <!--9. tableOfContents-->

        <!--10. targetAudience-->

        <!--11. note-->

        <!--12. subject-->

        <!--13. classification-->

        <!--14. relatedItem-->

        <!--15. identifier-->

        <!--16. location [ordered]-->

        <!--17. accessCondition-->

        <!--18. part-->

        <!--19. extension-->

        <!--20. recordInfo-->
        <elem tag="recordInfo" attrs="lang, xml:lang, script, transliteration, displayLabel, altRepGroup">
            <elem tag="recordContentSource"/>
            <elem tag="recordCreationDate"/>
            <elem tag="recordChangeDate"/>
            <elem tag="recordIdentifier"/>
            <elem tag="recordOrigin"/>
            <elem tag="languageOfCataloging">
                <elem tag="languageTerm"/>
                <elem tag="scriptTerm"/>
            </elem>
            <elem tag="descriptionStandard"/>  <!--(see:http://www.loc.gov/standards/sourcelist/descriptive-conventions.html)-->
        </elem>

    </root>

    <field-markers>
        <!-- todo: these should have paths, currently they are checked for presence but not resolved-->
        <field-marker name="CREATOR"/>
        <field-marker name="TITLE"/>
        <field-marker name="DESCRIPTION"/>
        <field-marker name="OWNER"/>
        <field-marker name="PROVIDER"/>
        <field-marker name="LANDING_PAGE"/>
        <field-marker name="THUMBNAIL"/>
        <field-marker name="THUMBNAIL"/>
        <field-marker name="SPEC"/>
        <field-marker name="DEEP_ZOOM_URL"/>
    </field-markers>

    <opts>
        <opt-list path="/mods/titleInfo" key="@key" value="@type" displayName="titleType">  <!--using type attribute-->
            <opt key="" value="enumerated"/>
            <opt key="" value="abbreviated"/>
            <opt key="" value="translated"/>
            <opt key="" value="alternative"/>
            <opt key="" value="uniform"/>
        </opt-list>
        <opt-list path="/mods/typeOfResource" key="@key" value="@type" displayName="Type of Resource">  <!--using type attribute-->
            <opt key="" value="text"/>
            <opt key="" value="cartographic"/>
            <opt key="" value="notated music"/>
            <opt key="" value="sound recording-musical"/>
            <opt key="" value="sound recording-nonmusical"/>
            <opt key="" value="sound recording"/>
            <opt key="" value="still image"/>
            <opt key="" value="moving image"/>
            <opt key="" value="three dimensional object"/>
            <opt key="" value="software, multimedia"/>
            <opt key="" value="mixed material"/>
            <opt key="" value=""/>
        </opt-list>

    </opts>


   <docs>
       <!--<doc tag="actor">-->
               <!--<string name="Definition">Describes and identifies an actor, i.e. a person, corporation, family or group, containing structured sub-elements for indexing and identification references. </string>-->
           <!--</doc>-->
       <doc tag="lang">
           <string name="Definition"></string>
           <string name="Application"></string>
           <string name="Examples">
               <![CDATA[ ]]>
           </string>
       </doc>


       <!--Attributes used throughout the schema, see also http://www.loc.gov/standards/mods/v3/mods-userguide-generalapp.html#list -->
       <doc attr="lang">
           <string name="Definition"><![CDATA[This attribute is used to specify the language used within individual elements, using the codes from ISO 639-2/b. This is equivalent to authority="iso639-2b" used with the <language> element (which gives a language of the resource described in the record), but is applied to the language used as content of the metadata elements. There is no MARC 21 equivalent for this attribute since language cannot be currently indicated at the element level.]]></string>
           <string name="Examples">
               <![CDATA[
               <name type="personal">
                   <namePart type="given">Jack</namePart>
                   <namePart type="family">May</namePart>
                   <namePart type="termsOfAddress">I</namePart>
                   <description lang="eng">District Commissioner</description>
                   <description lang="fre">Préfet de région</description>
               </name>
               ]]>
           </string>
       </doc>
       <doc attr="xml:lang">
           <string name="Definition"></string>
           <string name="Application"></string>
       </doc>
       <doc attr="script">
           <string name="Definition"></string>
           <string name="Application"></string>
       </doc>
       <doc attr="transliteration">
           <string name="Definition"></string>
           <string name="Application"></string>
       </doc>
    </docs>

</record-definition>
